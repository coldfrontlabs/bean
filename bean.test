class BeanTestPlugins extends DrupalWebTestCase {
  protected $admin_user;
  protected $plugin_name;

  public static function getInfo() {
    return array(
      'name' => 'Bean Plugin',
      'description' => 'Test the bean plugin API.',
      'group' => 'Bean',
    );
  }

  function setUp() {
    parent::setUp('bean', 'ctools', 'entity', 'bean_test', 'block');

    // Create and log in an administrative user
    $this->admin_user = $this->drupalCreateUser(array(
      'administer blocks',
      'administer bean types',
      'administer beans',
      'access administration pages',
    ));
    $this->drupalLogin($this->admin_user);

    // Test plugin name
    $this->plugin_name = 'test_bean';
  }

  /**
   * Test loading of the plugin
   */
  function testBeanLoadPlugin() {
    // Fetch the test plugin
    $plugin = bean_fetch_plugin_info($this->plugin_name);

    // Get the defaults
    $plugin_def = bean_ctools_plugin_type();
    $plugin_def = $plugin_def['defaults'];
    // Add in the customs
    $plugin_def = $this->beanPluginDefinition() + $plugin_def;

    // The plugin and the definition should be the same
    $this->assertEqual($plugin, $plugin_def, t('Plugin Definition should be correct'));

    // Load the class
    try {
      $plugin_class = bean_load_plugin_class($this->plugin_name);
    }
    catch (Exception $e) {
      $this->assert('fail', t('Bean type should use the BeanTypePluginInterface interface'));
    }

    // Plugin should be implement the BeanTypePluginInterface interface
    if ($plugin_class instanceof BeanTypePluginInterface) {
      $this->assert('pass', t('Bean type should use the BeanTypePluginInterface interface'));
    }
    else {
      $this->assert('fail', t('Bean type should use the BeanTypePluginInterface interface'));
    }
  }

  /**
   * Test that a bean type can load if the class doesn't exist
   */
  public function testMissingBeanType() {
    try {
      $plugin_class = bean_load_plugin_class($this->plugin_name);
    }
    catch (Exception $e) {
      $this->assert('fail', t('A bean type should load if the class no longer exists'));
    }

    if ($plugin_class instanceof BeanTypePluginInterface) {
      $this->assert('pass', t('A bean type should load if the class no longer exists'));
    }
    else {
      $this->assert('fail', t('A bean type should load if the class no longer exists'));
    }
  }

